<?xml version="1.0" encoding="utf-8"?>
<com.lovejjfg.blogdemo.ui.SlideToFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebf5f5"
        android:orientation="vertical">

        <include layout="@layout/app_bar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.lovejjfg.blogdemo.ui.TopSlidWebViewLayout
                android:id="@+id/web_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/pb"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:max="100"
                />

        </FrameLayout>

    </LinearLayout>


</com.lovejjfg.blogdemo.ui.SlideToFinishLayout>

